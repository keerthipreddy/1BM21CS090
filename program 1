#include<stdio.h>
#include<stdlib.h>
#define stack_size 5
int st[10],item,top=-1;

void push()
{
if(top==stack_size-1)
printf("stack overflow\n");
else
{
top++;
st[top]=item;
}
}

int pop()
{
int del_item;
if (top==-1)
printf("stack underflow\n");
else
{
top--;
return del_item;
}
}

void display()
{
int i;
if(top==-1)
printf("stack is empty\n");
for(i=0;i<=top;i++)
printf("%d\t",st[i]);
}

void main()
{
int c;
while(1)
{
printf("enter the choice\n");
scanf("%d\n",&c);
switch(c)
{
case 1: printf("enter the item");
scanf("%d",&item);
break;
case 2: printf("\n%d item was deleted",pop());
break;
case 3:display();
break;
default : printf("invalid choice");
exit(0);
break;
}
}
}
